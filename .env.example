# =========================
# API e diretórios
# =========================
COGNEE_HTTP_PORT=8000
SYSTEM_ROOT_DIRECTORY=/app/.cognee_system

REQUIRE_AUTHENTICATION=true
TELEMETRY_DISABLED=true
# SENTRY_DSN=

# =========================
# LLM (OpenAI por padrão)
# =========================
LLM_PROVIDER=openai
LLM_MODEL=openai/gpt-4o-mini
LLM_API_KEY=CHAVE_OPENAI_AQUI
LLM_ENDPOINT=
LLM_API_VERSION=
LLM_MAX_TOKENS=16384
LLM_RATE_LIMIT_ENABLED=true
LLM_RATE_LIMIT_REQUESTS=60
LLM_RATE_LIMIT_INTERVAL=60

# =========================
# Embeddings
# =========================
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=openai/text-embedding-3-large
EMBEDDING_DIMENSIONS=3072
EMBEDDING_API_KEY=
EMBEDDING_ENDPOINT=
EMBEDDING_API_VERSION=
EMBEDDING_MAX_TOKENS=8191
EMBEDDING_RATE_LIMIT_ENABLED=true
EMBEDDING_RATE_LIMIT_REQUESTS=10
EMBEDDING_RATE_LIMIT_INTERVAL=5

# =========================
# Banco Relacional (pg)
# =========================
DB_PROVIDER=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cognee_db
DB_USERNAME=cognee
DB_PASSWORD=troque-esta-senha

# =========================
# Vector Store (pgvector)
# =========================
VECTOR_DB_PROVIDER=pgvector
VECTOR_DB_PORT=5432
# VECTOR_DB_URL=
# VECTOR_DB_KEY=

# =========================
# Grafo (Neo4j)
# =========================
GRAPH_DATABASE_PROVIDER=neo4j
GRAPH_DATABASE_URL=bolt://neo4j:7687
GRAPH_DATABASE_NAME=neo4j
GRAPH_DATABASE_USERNAME=neo4j
GRAPH_DATABASE_PASSWORD=troque-esta-senha

# =========================
# Neo4j (serviço)
# =========================
NEO4J_PASSWORD=troque-esta-senha
